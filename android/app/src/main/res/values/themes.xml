<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SekerPatlatma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/candy_pink</item>
        <item name="colorPrimaryVariant">@color/candy_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/candy_purple</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <!-- Full screen -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.SekerPatlatma.Splash" parent="Theme.SekerPatlatma">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
