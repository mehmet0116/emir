<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SekerPatlatma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/candy_pink</item>
        <item name="colorPrimaryVariant">@color/candy_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/candy_purple</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
        <!-- Full screen -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Switch styling -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/success</item>
    </style>

    <style name="Theme.SekerPatlatma.Splash" parent="Theme.SekerPatlatma">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Modern Dialog Theme -->
    <style name="ModernDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/bg_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B0FFFFFF</item>
        <item name="colorAccent">@color/candy_pink</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/candy_pink</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#80FFFFFF</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#80FFFFFF</item>
    </style>
</resources>
